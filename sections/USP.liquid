{% liquid

   assign config = section.settings
   
   assign padding_top = 'pt-' | append: config.pt

   assign bg_color = " bg:" | append: config.bg_color

  capture text_props
     render 'general_settings_text_props', config: section.settings
   endcapture

   capture pc_width
      render 'general_settings_pc_width', config: section.settings  
   endcapture

   capture outer
      render 'general_settings_outer', config: section.settings 
   endcapture

   capture inner
      render 'general_settings_inner', config: section.settings 
   endcapture

%}

{%- assign usp_blocks = section.blocks -%}


<div class="section {{ outer }}" data-name="usp-{{ section.id }}">

  <div class="section-bg {% unless section.settings.bg_inner %} {{ bg_color }} {% endunless %} ">

    <div class="container {{ pc_width }}">

      <div class="section-inner {{ inner }} {{ text_props }} {% if section.settings.bg_inner %} {{ bg_color }} {% endif %} ">

        <div class="section-header"></div>
        <div class="section-content">

          <div class="mt:md pw">

            <div class="p:md">
              <div class="fx fx:wr md-up:fx:nowrap gp:md">

                {%- for block in usp_blocks -%}
                {%- assign conf = block.settings -%}

                <div class="fi fi:1/2 md-up:fi:1/{{ usp_blocks.size }}">
                  <div class="tx:center py md-up:p">

                    {%- if conf.icon.size > 0 -%}
                    {{ conf.icon | replace: 'w-6 h-6', 'icon icon:xl' | replace: 'stroke-width="2"', 'stroke-width="1"' }}
                    {%- endif -%}

                    {%- if conf.title -%}
                    <p class="hd hd:sm pt:tn lh:xl">
                      {{ conf.title }}
                    </p>
                    {%- endif -%}

                    {%- if conf.text -%}
                    <div class="rte">
                      {{ conf.text }}
                    </div>
                    {%- endif -%}
                  </div>
                </div>
                {%- endfor -%}
              </div>
            </div>

          </div>

        </div>

      </div>
    </div>
  </div>
</div>

