{{ 'basic_article.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign PublishedAt = article.published_at | date: '%B %d, %Y'
-%}

<div class="container">
  <div class="pw pw:sm">
    <div class="content-wrapper">
      <div class="title-wrapper mt:sm mb:tn">
      <h1 class="article-title tx:center tx:bold">{{ article.title }}</h1>
    </div>
      
      <div class="author-wrapper tx:center tx:bold mb:sm">
        <p class="article-author">{{ 'article.author' | t: author: article.author, published_at: PublishedAt }}</p>
      </div>

      <div class="article-content rte">{{ article.content }}</div>
    </div>
  </div>
</div>
