{% liquid

	assign config = section.settings
    assign tracking_script_list = section.blocks
    
-%}

<!-- Begin customer inserted scripts from Customize -->
{%- liquid

	if tracking_script_list.size > 0
       for tracking_script in tracking_script_list
          if tracking_script.settings.embed_code.size > 0
            echo tracking_script.settings.embed_code
          endif 
       endfor
	endif 

-%}
<!-- End customer inserted scripts from Customize -->

{% schema %}
  {
    "name": "Head, scripts",
    "settings": [
		{
			"type": "header",
			"content": "Explaination"
		}, {
			"type": "paragraph",
			"content": "You can add your custom scripts, with or without access to Shopify liquid here. Scripts added here, are added to ALL pages"
		}, {
			"type": "paragraph",
			"content": "Some scripts, or HTML requires a fallback - that usually needs to be added to the body. You also have a section for this, if you look further towards the bottom of the Customize sidebar."
		}, {
			"type": "paragraph",
			"content": "Do not add body scripts or non script HTML in this section, as you may break the page."
		},  {
			"type": "header",
			"content": "Advanced tracking code"
		}, {
			"type": "paragraph",
			"content": "Only use this one, if you need to use Liquid objects. If you do not know what this means, do NOT use this block type."
		}
	],
	"blocks": [
		{
			"name": "Standard tracking code",
			"type": "html_embed",
			"settings": [
				{
					"type": "html",
					"id": "embed_code",
					"label": "Your embed code"
				}, {
					"type": "text",
					"id": "title",
					"label": "Label/name",
					"info": "Used in sidebar, for better overview"
				}
			]
		},  {
			"name": "Advanced tracking code",
			"type": "liquid_embed",
			"settings": [
				{
                  "type": "paragraph",
                  "content": "Only use this one, if you need to use Liquid objects. If you do not know what this means, do NOT use this block type."
                }, {
					"type": "liquid",
					"id": "embed_code",
					"label": "Your embed code",
					"info": "Has access to Liquid objects"
				}, {
					"type": "text",
					"id": "title",
					"label": "Label/name",
					"info": "Used in sidebar, for better overview"
				}
			]
		}
	]
  }
{% endschema %}