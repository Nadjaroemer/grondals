{%- assign CurrentUrl = shop.url | append: article.url -%}
{%- assign ArticleTitle = article.title | escape -%}

{%- capture SocialIcons -%}
  <div class="fx gp ai:center">
    <div class="fi fi:1/3">
      
    </div>
    <div class="fi fi:1/3">
      <div class="social-icon m:center">
        <a class="absolute--fill" href="http://www.facebook.com/sharer/sharer.php?u={{ CurrentUrl }}&t={{ ArticleTitle }}" target="_blank"></a>
        {{ FacebookIcon }}
      </div>
    </div>
    
    <div class="fi fi:1/3">
      <div class="social-icon m:center">
        <a class="absolute--fill" href="http://www.twitter.com/intent/tweet?url={{ CurrentUrl }}&text={{ ArticleTitle }}" target="_blank"></a>
        {{ TwitterIcon }}
      </div>
    </div>
  </div>
{%- endcapture -%}


