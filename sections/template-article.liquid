  {%- assign BadgeClass = "fx fi ai:center badge--article jc:center fx dir:col jc:center" -%}

{%- endcapture -%}

<style>
.content-for-layout {
      max-width:{{section.settings.article_max_width_mainwrapper | default: '1000'}}px;
      margin:0 auto;
      font-size:{{ section.settings.base_size_px }}px;
}

.article_content--seo {
  padding: 0 22px;
}

   @media print {
     #shopify-section-static-header,
     #shopify-section-static-footer,
     #shopify-section-static-announcement-bar, 
     #shopify-section-USP,
     .product__reviews--article,
     .article__print,
     #preview-bar-iframe, 
     title {
       display:none;
     }

    .article__info-img {
      padding-bottom:20px;
    }
  }
</style>

<div class="template__article-main">
<div class="pt:lg mt:xl pos:re">
  <div class="article-illustration container">
    {{ WaveIllustration }}
  </div>
  <div class="article__info container">
    <div class="pw pw:tn md-up:pw:xs">
      <div class="article__info-img image-fit--cover">{%- render 'image', image: article.image, size: '180,320,480,600,720', ImageRatio: 100 -%}</div>
    </div>

    <div class="background" style="background-color:{{ config.background_color }};color:{{ config.text_color }};">
      <div class="title-wrapper pt">
        <h1 class="article-title hd hd:xl tx:center" style="color:{{ config.text_color }};">{{ article.title }}</h1>
      </div>

      <div class="article__info pw pw:xs my:md">
        <div class="fx gp base:sm ai:center jc:center">
          {%- if config.persons_badge != blank -%}
            <div class="{{ BadgeClass }}">
              {{ PersonsIcon }}
              <span>{{ config.persons_badge }}</span>
            </div>
          {%- endif -%}
          {%- if config.time_badge != blank -%}
            <div class="{{ BadgeClass }}">
              {{ ClockIcon }}
              <span>{{ config.time_badge }}</span>
            </div>
          {%- endif -%}
          {%- if config.info_badge != blank -%}
            <div class="{{ BadgeClass }}">
              {{ TypeIcon }}
              <span>{{ config.info_badge }}</span>
            </div>
          {%- endif -%}
        </div>
      </div>

      <div class="article__info-bg" style="background-color:{{ config.background_color }};">
        <div class="pw pw:xs md-up:pw:sm container">
          <div class="article_info" style="background-color:{{ config.background_color_h2 }};">
            <div class="fx ai:center jc:between fx:wr md-up:fx:no-wr">

              <div class="subtitle-wrapper">
                {%- if config.subtitle != blank -%}
                  <h2 class="hd hd:lg" style="color:{{ config.text_color_h2 }};">{{ config.subtitle | strip_html }}</h2>
                {%- endif -%}
              </div>

              {%- render "product-reviews", product: article.metafields.reference.product.value -%}

            </div>
            {%- if config.subtext != blank -%}
              <div class="article__info-desc py:xs" >
                <div class="rte" style="color:{{ config.text_color_h2 }};">
                  {{ config.subtext }}
                </div>
              </div>
            {%- endif -%}
          </div>


          <div class="article__print pw pw:xs">
            <div class="fx jc:between fx:wr md-up:fx:no-wr mt py">
              <div class="fx jc:center fi:1/1 mb:lg md-up:mb:cl md-up:jc:start">
                <button class="button fx ai:center md-up:m:cl" data-print-trigger type="button">
                  {{ PrintIcon }}
                  <span>{{ 'recipe.print' | t }}</span>
                </button>
              </div>
              <div class="fi:1/1 m:center">
                {{ SocialIcons }}
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
</div>


{% schema %}

{
  "name": "Template article",
  "templates": ["article"],
  "settings": [
    {
      "type": "number",
      "id": "article_max_width_mainwrapper",
      "label": "Article max width px",
      "default": 1000,
      "info": "To create more \'card\' like design"
    },
    {
      "type": "number",
      "id": "base_size_px",
      "label": "Font px scale for page",
      "default": 13
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }, {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext"
    }, {
      "type": "text",
      "id": "persons_badge",
      "label": "Persons badge",
      "default": "4 personer"
    }, {
      "type": "text",
      "id": "time_badge",
      "label": "Time  badge",
      "default": "25 minutter"
    }, {
      "type": "text",
      "id": "info_badge",
      "label": "Info badge",
      "default": "Frokostret"
    }, {
      "content": "Colors - main section",
      "type": "header"
    },{
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }, {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f1f9fb"
    }, {
      "content": "Colors - H2 section",
      "type": "header"
    },{
      "type": "color",
      "id": "text_color_h2",
      "label": "Text color",
      "default": "#000000"
    }, {
      "type": "color",
      "id": "background_color_h2",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Article Info description",
      "settings": {}
    }
  ]
}

{% endschema %}
