{{ 'template-list-collections.css' | asset_url | stylesheet_tag }}

{%- assign config = section.settings -%}

<div class="collection_list">
  <div class="collection_list-inner">
    <div class="collection_list-navigation" data-collection-navigation>
      <div class="collection_list-bg">
        <div class="pw">
          <div class="md-up:container">

            <div class="collection_list-grid fx jc:start md-up:jc:center ai:center sb:hide container md-up:px:cl" data-collection-navigation-grid>
              {%- for collection in config.collection_list -%}
              {%- assign CollectionCategory = collection.metafields.collection.category_name.value -%}

              <div class="collection_list-item">
               <wdn-scroll-link class="collection_link" data-target="{{ CollectionCategory | downcase }}" data-collection-link="{{ CollectionCategory }}">{{ CollectionCategory }}</wdn-scroll-link> 
              </div>
              {%- endfor -%}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="pw">
      <div class="container">
        <div class="collections">
          {%- for collection in config.collection_list -%}
            {%- render "section-products", config: config, collection: collection, hasDropdown: true, amount: amount -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'template-list-collections.js' | asset_url }}" defer></script>

